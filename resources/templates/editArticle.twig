{% extends "masterLayout.twig" %}

{% block title %}Blog{% endblock %}

{% block titlePage %}Edit Article{% endblock %}

{% block content %}
    <form method="POST" action="{{ path('editArticle', {article_id: article.id}) }}">
        <input type="hidden" name="article_id" id="article_id" value="{{ article.id }}" />
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" value="{{ article.title }}" class="form-control" />
        </div>
        <div class="form-group">
            <label for="content">Text</label>
            <textarea name="content" class="form-control" id="content" style="width: 300px; height: 150px;"> {{ article.content }}</textarea>
        </div>
        <button type="submit" class="btn btn-default">Save</button>
    </form>
{% endblock %}