{% extends "masterLayout.twig" %}

{% block title %}Write Article{% endblock %}

{% block titlePage %}Write Article{% endblock %}

{% block content %}
    <form action="{{ path('writeArticle') }}" method="POST">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" class="form-control" />
        </div>
        <div class="form-group">
            <label for="content">Text</label>
            <textarea name="content" class="form-control" id="content" style="width: 300px; height: 150px;"></textarea>
        </div>
        <button type="submit" class="btn btn-default">Save</button>
    </form>
{% endblock %}